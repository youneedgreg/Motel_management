generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  empId     String   @unique
  name      String
  email     String   @unique
  phone     String
  address   String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  number Int     @unique
  status String
}